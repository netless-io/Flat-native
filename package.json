{
    "name": "root",
    "private": true,
    "scripts": {
        "preinstall": "npm install minimist@1.2.5 edit-json-file@1.4.1 --save-dev && ./scripts/build-agora-sdk.js"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "renderer-app/@babel/plugin-transform-runtime",
            "renderer-app/agora-electron-sdk",
            "renderer-app/agora-rtm-sdk",
            "renderer-app/webpack-dev-server",
            "renderer-app/webpack-dev-server-output",
            "renderer-app/native-addon-loader",
            "renderer-app/webpack-node-externals",
            "main-app/electron-builder",
            "main-app/electron-builder/app-builder-lib",
            "main-app/electron-builder/builder-util",
            "main-app/electron-builder/builder-util-runtime",
            "main-app/electron-builder/dmg-builder",
            "main-app/js-yaml"
        ]
    },
    "devDependencies": {
        "@types/node": "^12.0.0",
        "cross-env": "^7.0.2",
        "edit-json-file": "^1.4.1",
        "minimist": "^1.2.5"
    },
    "agora_electron": {
        "platform": "darwin",
        "arch": "x64",
        "electron_version": "7.1.2",
        "msvs_version": "2017",
